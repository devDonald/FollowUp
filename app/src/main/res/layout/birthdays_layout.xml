<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:id="@+id/im_birthday_pics"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/person"/>
        <TextView
            android:layout_marginTop="8dp"
            android:background="@drawable/border_text"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_birthday_name"
            android:text="Person names"
            android:layout_toRightOf="@+id/im_birthday_pics"
            />
        <TextView
            android:background="@drawable/border_text"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_birthday_phone"
            android:text="Person phone"
            android:layout_below="@id/tv_birthday_name"
            android:layout_toRightOf="@id/im_birthday_pics"
            />
        <TextView
            android:background="@drawable/border_text"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_birthday_dob"
            android:text="dob"
            android:layout_below="@id/tv_birthday_phone"
            android:layout_toRightOf="@id/im_birthday_pics"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>