<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.godlife.followup.activities.MainActivity">

    <ScrollView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_service_summary"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_lovenotes"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/sevice_image"
                        android:src="@drawable/service"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_service_text"
                        />

                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_service_text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="Live Update"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_lovenotes"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_service_summary"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/love_image"
                        android:src="@drawable/lovenote"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_lovenote_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_lovenote_text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="Love Note"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_praise_report"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_service_summary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_upcoming_meetings"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/praise_image"
                        android:src="@drawable/testimony"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_praise_report_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_praise_report_text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="Praise Report"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_upcoming_meetings"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/card_lovenotes"
                app:layout_constraintStart_toEndOf="@id/card_praise_report"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/meeting_images"
                        android:src="@drawable/notices"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_upcoming_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_upcoming_text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="Upcoming Meetings"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_articles"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_praise_report"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_first_timers"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/article_image"
                        android:src="@drawable/articles"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_articles_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_articles_text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="Articles"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_first_timers"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_upcoming_meetings"
                app:layout_constraintStart_toEndOf="@id/card_articles"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/first_images"
                        android:src="@drawable/firsttimers"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_first_timers"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_first_timers"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="First Timers"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_report"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_articles"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_members"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/report_images"
                        android:src="@drawable/report"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_report"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_report"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="Report"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_members"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_first_timers"
                app:layout_constraintStart_toEndOf="@id/card_report"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/members_images"
                        android:src="@drawable/members"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_members"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_members"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="Members"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_lyrics"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_report"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_notices"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 >

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/Lyrics_images"
                        android:src="@drawable/ic_queue_music"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_lyrics"
                        />
                    <Button
                        android:id="@+id/bt_lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:text="Lyrics"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:id="@+id/card_notices"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_members"
                app:layout_constraintStart_toEndOf="@id/card_lyrics"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/notices_images"
                        android:src="@drawable/up_events"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_add_notices"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_add_notices"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="Notices"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
