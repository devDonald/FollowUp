<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:background="@color/white"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_person"
            android:id="@+id/member_show_picture"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person Name"
            android:id="@+id/member_show_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_toEndOf="@id/member_show_picture"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_below="@id/member_show_name"
            android:id="@+id/member_show_phone"
            android:textSize="15sp"
            android:layout_toEndOf="@id/member_show_picture"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_below="@id/member_show_name"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:id="@+id/member_show_gender"
            android:textSize="15sp"
            android:layout_toEndOf="@id/member_show_phone"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single"
            android:id="@+id/member_show_marital"
            android:layout_below="@id/member_show_phone"
            android:textSize="15sp"
            android:layout_toEndOf="@id/member_show_picture"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupation"
            android:layout_below="@id/member_show_phone"
            android:id="@+id/member_show_occupation"
            android:textSize="15sp"
            android:layout_toEndOf="@id/member_show_marital"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_below="@id/member_show_marital"
            android:id="@+id/member_show_location"
            android:textSize="15sp"
            android:layout_toEndOf="@id/member_show_picture"
            android:textColor="@color/black"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>