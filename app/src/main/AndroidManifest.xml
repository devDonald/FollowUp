<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.godlife.followup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".validators.MyApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">

        </activity>
        <activity
            android:name=".church_members.Members"
            android:label="@string/title_activity_members"
            />
        <activity android:name=".church_members.AddMembers" />
        <activity
            android:name=".church_members.FullDetails"
            android:label="Member Full Details" />
        <activity
            android:name=".church_members.UpdateMember"
            android:label="Update Member" />
        <activity
            android:name=".first_timers.FirstTimers"
            android:label="@string/title_activity_first_timers"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.godlife.followup.MainActivity" />
        </activity>
        <activity
            android:name=".ResetPassword"
            android:label="Reset Password" />
        <activity android:name=".church_members.SearchMember" />
        <activity android:name=".church_members.GetLocation" />
        <activity
            android:name=".reports.Reports"
            android:label="@string/title_activity_reports"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".first_timers.AddFirstTimers" />
        <activity android:name=".reports.AddReports"></activity>
    </application>

</manifest>